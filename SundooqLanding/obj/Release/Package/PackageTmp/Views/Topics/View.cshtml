<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        function showPopup(url) {
            newwindow = window.open(url, 'name', 'height=300,width=600,top=200,left=300,resizable');
            if (window.focus) { newwindow.focus() }
        }
    </script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sundooq-@ViewBag.Topic.Title</title>
    <link rel="icon"
        type="image/png"
        href="/img/icon.png">
    <meta property="og:title"
content="@ViewBag.Topic.Title" />
    <meta property="og:image"
content="@ViewBag.Topic.Img" />
    <meta property="og:description" content="@ViewBag.Topic.Descr" />
    <meta name="description" content="@ViewBag.Topic.Title">
    <meta name="viewport" content="user-scalable=0, width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui" />
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="stylesheet" href="/less/custom.css">
    <script src="/js/jquery-2.1.0.min.js"></script>
    <script src="/js/modernizr-2.6.2.min.js"></script>
    <script src="~/screen_scripts/view.js"></script>
</head>
<body class="yo-anim-enabled">
    <section id="mini-navbar" style="margin-top: 50px;" class="main-navbar hidden-xs hidden-sm">
        <div class="nav">
            <div class="container">
                <div class="row">
                    <nav class="col-md-12">
                        <div class="logo pull-left">
                            <a href="/user/home/@Session["Sorting"].ToString()">
                                <figure>
                                    <img src="/img/logo.png" alt="Stay Updated!" />
                                </figure>
                            </a>
                        </div>
                        <ul class="main-nav pull-right nav-height">
                            <li>
                                <a href="/user/home/@Session["Sorting"].ToString()" data-target="#features" data-hover="features" class="home-page"><i class="fa fa-home"></i></a>
                            </li>
                            <li>
                                <a onclick="toggleTags()" data-target="#about" data-hover="about" class="home-page"><i class="fa fa-tag"></i></a>
                            </li>
                            <li>
                                <a onclick="showPopup('https://www.facebook.com/sharer.php?u=@HttpUtility.UrlEncode(Request.Url.ToString())')" data-target="#about" data-hover="about" class="home-page"><i class="fa fa-facebook"></i></a>


                            </li>
                            <li>
                                <a onclick="showPopup('http://twitter.com/home?status=@HttpUtility.UrlEncode(Request.Url.ToString())')"  data-target="#about" data-hover="about" class="home-page"><i class="fa fa-twitter"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <div id="mobile-nav" class="visible-xs visible-sm">
        <div class="" id="flyout-container">
            <ul id="menu-mobile" class="nav flyout-menu main-nav nav-height">
                <li class="menu-item">
                    <a href="/user/home/@Session["Sorting"].ToString()" data-hover="" class=""><i class="fa fa-home"></i></a>
                </li>
                <li class="menu-item">
                    <a onclick="toggleTags()" data-hover="" class=""><i class="fa fa-tag"></i></a>
                </li>
                <li class="menu-item">
                    <a onclick="showPopup('https://www.facebook.com/sharer.php?u=@HttpUtility.UrlEncode(Request.Url.ToString())')" data-hover="" class=""><i class="fa fa-facebook"></i></a>


                </li>
                <li class="menu-item">
                    <a onclick="showPopup('http://twitter.com/home?status=@HttpUtility.UrlEncode(Request.Url.ToString())')"  data-hover="" class=""><i class="fa fa-twitter"></i></a>
                </li>
            </ul>
        </div>
        <header>
            <div class="container">
                <ul class="menu-header">
                    <li class="pull-left">
                        <a href="/user/home/@Session["Sorting"].ToString()">
                            <figure>
                                <img src="/img/icon.png" style="height: 40px; margin-top: 20px;" alt="Stay Updated!" />
                            </figure>
                        </a>
                    </li>
                    <li class="reorder pull-right"><a href="/user/home/@Session["Sorting"].ToString()" title=""><i class="fa fa-home"></i></a></li>
                    <li class="reorder pull-right"><a onclick="toggleTags()" title=""><i class="fa fa-tags"></i></a></li>
                    <li class="reorder pull-right"><a onclick="showPopup('https://www.facebook.com/sharer.php?u=@HttpUtility.UrlEncode(Request.Url.ToString())')" title=""><i class="fa fa-facebook"></i></a></li>
                    <li class="reorder pull-right"><a onclick="showPopup('http://twitter.com/home?status=@HttpUtility.UrlEncode(Request.Url.ToString())')" title=""><i class="fa fa-twitter"></i></a></li>
                </ul>
            </div>
        </header>
    </div>
    <section class="elements">
        <div id="tagsdiv" style="border-top: 2px solid #666; padding: 1%; display: none; position: fixed; width: 100%; bottom: 0px; left: 0px; background-color: #fff">
            @{
                int counter = 0;
                SundooqLanding.Models.Users Current = (SundooqLanding.Models.Users)Session["User"];
                if (Current != null && Current.Tags.ToLower().Contains(@ViewBag.Topic.Tags.ToLower().Split('#')[ViewBag.Topic.Tags.Split('#').Length - 1]))
                {
                <a class="btn btn-color" data-hover="Button">@ViewBag.Topic.Tags.Split('#')[ViewBag.Topic.Tags.Split('#').Length - 1]</a>
                }
                else
                {
                <a class="btn btn-outline-color" data-hover="Button">@ViewBag.Topic.Tags.Split('#')[ViewBag.Topic.Tags.Split('#').Length - 1]</a>
                }
                foreach (string Tag in ViewBag.Topic.Tags.Split('#'))
                {
                    if (counter > 7 || counter > ViewBag.Topic.Tags.ToLower().Split('#').Length - 2)
                    {
                        break;
                    }
                    counter++;
                    if (Tag.Trim().Length > 0)
                    {
                        if (Current != null && Current.Tags.ToLower().Contains(Tag.ToLower()))
                        {
                <a class="btn btn-color" data-hover="Button">@Tag</a>
                        }
                        else
                        {
                <a class="btn btn-outline-color" data-hover="Button">@Tag</a>
                        }
                    }
                }
            }
        </div>
        <iframe id="topicframe" frameborder="0" src="@ViewBag.Topic.URL" width="100%" height="650px" style="margin-top:50px" />
    </section>
    <section id="footer" class="">
        <div class="container">
            <div class="row">
                <nav class="col-md-12">
                    <div class="pull-left copyright">Copyright 2014 © <a href="/" title="Sundooq INC">Sundooq</a></div>
                </nav>
            </div>
        </div>
    </section>
    <div class="gallery-wrapper"></div>
    <script src="/js/enquire.js"></script>
    <script src="/js/jquery.imagesloaded.js"></script>
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/owl.carousel.js"></script>
    <script src="/js/tooltip.js"></script>
    <script src="/js/transit.js"></script>
    <script src="/js/transition.js"></script>
    <script src="/js/scrollspy.js"></script>
    <script src="/js/main.js"></script>
    <script type="text/javascript">
        function iframeLoaded() {
            var iFrameID = document.getElementById('topicframe');
            if (iFrameID) {
                // here you can make the height, I delete it first, then I make it again
                iFrameID.height = "";
                iFrameID.height = iFrameID.contentWindow.document.body.scrollHeight + "px";
            }
        }
    </script>
</body>
</html>
